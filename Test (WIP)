javascript:async function getName(t){let e=await fetch("https://api.blooket.com/api/users/verify-token?token=JWT+"+t),o=await e.json();return o.name}async function addCurrencies(){let t=Number(prompt("How many tokens do you want to add to your account? (500 daily)")),e=localStorage.token.split("JWT ")[1];t>500&&alert("You can only add up to 500 tokens daily.");let o=await fetch("https://api.blooket.com/api/users/add-rewards",{method:"PUT",headers:{referer:"https://www.blooket.com/","content-type":"application/json",authorization:localStorage.token},body:JSON.stringify({addedTokens:t,addedXp:300,name:await getName(e)})});200==o.status?alert(`${t} tokens and 300 XP added to your account!`):alert("An error occured.")}addCurrencies();
